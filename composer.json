{
    "name": "savannabits/movesms",
    "description": "PHP Laravel Adapter for fluently interacting with the Movetech Bulk SMS API",
    "keywords": [
        "savannabits",
        "movesms"
    ],
    "homepage": "https://github.com/savannabits/movesms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sam Maosa",
            "email": "maosa.sam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Savannabits\\Movesms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Savannabits\\Movesms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
